{
  "rules": [
    {
      "description": "Turn IME off when ESC or ^[ is pressed at vim bind application",
      "manipulators": [
        {
          "conditions": [
            {
              "bundle_identifiers": [
                "^com\\.apple\\.Terminal$",
                "^org\\.vim\\.",
                "^com\\.googlecode\\.iterm2$",
                "^com\\.qvacua\\.VimR$",
                "^md\\.obsidian$"
              ],
              "type": "frontmost_application_if"
            }
          ],
          "from": {
            "key_code": "escape",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "japanese_eisuu"
            },
            {
              "key_code": "escape"
            }
          ],
          "type": "basic"
        },
        {
          "conditions": [
            {
              "bundle_identifiers": [
                "^com\\.apple\\.Terminal$",
                "^org\\.vim\\.",
                "^com\\.googlecode\\.iterm2$",
                "^com\\.qvacua\\.VimR$",
                "^md\\.obsidian$"
              ],
              "type": "frontmost_application_if"
            }
          ],
          "from": {
            "key_code": "open_bracket",
            "modifiers": {
              "mandatory": [
                "left_control"
              ]
            }
          },
          "to": [
            {
              "key_code": "japanese_eisuu"
            },
            {
              "key_code": "escape"
            }
          ],
          "type": "basic"
        }
      ]
    }
  ],
  "title": "Turn IME off when ESC or ^[ is pressed at vim bind application"
}
