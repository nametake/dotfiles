[user]
  name = nametake
  email = nametake.kyarabuki@gmail.com

[push]
  default = simple
  path = ~/.gitconfig.local

[fetch]
  prune = true

[alias]
  tree = log --graph --all --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative 
  delete-merged-branch = "!f () { git checkout $1; git branch --merged|egrep -v '\\*|develop|master'|xargs git branch -d; };f"
  p = !git push origin `git rev-parse --abbrev-ref HEAD`
  ac = !git add -A && git commit
  ch = checkout
  di = diff
  default = "!f () { git ch master; git pull; git delete-merged-branch; };f"

[core]
  editor = "vim -u NONE -i NONE -N -c 'syntax on'"
  excludesfile = ~/.gitignore

[include]
  path = ~/.gitconfig.local

[ghq]
  root = ~/.ghq
  root = ~/go/src
  root = ~/Workspace

[init]
  templatedir=~/.git_template
