set clipboard=unnamed
set surround
set ignorecase
set smartcase
set incsearch
set hlsearch

" Run/Debug
nnoremap <Space>r :<C-u>action Run<CR>
nnoremap <Space>d :<C-u>action Debug<CR>
nnoremap <Space>t :<C-u>action RunClass<CR>

" Show info
nnoremap <Space>e :<C-u>action ShowErrorDescription<CR>

" Search
nnoremap <C-p> :<C-u>action GotoFile<CR>
nnoremap <C-s> :<C-u>action FindInPath<CR>

" Code jump
nnoremap <C-i> :<C-u>action Back<CR>
nnoremap <C-o> :<C-u>action Forward<CR>
nnoremap <C-S-i> <C-i>
nnoremap <C-S-o> <C-o>
nnoremap <C-t><C-t> <C-t>
nnoremap gd :<C-u>action GotoDeclaration<CR>
nnoremap gr :<C-u>action FindUsages<CR>
nnoremap gi :<C-u>action GotoImplementation<CR>
nnoremap gT :<C-u>action GotoTypeDeclaration<CR>
nnoremap <Space>j :<C-u>action GotoNextError<CR>
nnoremap <Space>k :<C-u>action GotoPreviousError<CR>
nnoremap <C-t><C-t> :<C-u>action Back<CR>

" Split
nnoremap <C-t>n :<C-u>action NextTab<CR>
nnoremap <C-t>p :<C-u>action PreviousTab<CR>
nnoremap <C-t>s :<C-u>action MoveTabDown<CR>
nnoremap <C-t>v :<C-u>action MoveTabRight<CR>
nnoremap <C-t>l :<C-u>action NextSplitter<CR>
nnoremap <C-t>h :<C-u>action PrevSplitter<CR>

nnoremap <Space>f :<C-u>action ActivateProjectToolWindow<CR>
nnoremap <Space>r :<C-u>action RenameElement<CR>

nnoremap ; :<C-u>action ShowIntentionActions<CR>

" Plugin -- https://github.com/JetBrains/ideavim/wiki/IdeaVim-Plugins --
Plug 'preservim/nerdtree'
nnoremap <silent> <Space>f :<C-u>NERDTreeFind<CR>
let g:NERDTreeQuitOnOpen=1
let g:NERDTreeMapOpenSplit='<C-x>'
let g:NERDTreeMapOpenVSplit='<C-v>'

Plug 'tpope/vim-surround'

Plug 'machakann/vim-highlightedyank'
